@model LoginAppDemo.Models.ViewModel.PersonModel

@using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.DisplayTextFor(m => m.CompanyName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Birthdate, new {  type = "date" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new { @class = "col-md-2" })
        <div class="col-md-10"> 
            @Html.RadioButtonFor(m => m.Gender, "Male")
            @Html.Label("rbMale", "Male")
            @Html.RadioButtonFor(m => m.Gender, "Female")
            @Html.Label("rbFemale", "Female")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Position, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Position)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Department, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Department)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmployeedFrom, new { @class = "col-md-2 " })
        <div class="col-md-10">
           @Html.EditorFor(m => m.EmployeedFrom, new { type = "date" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmployeedTo, new { @class = "col-md-2 " })
        <div class="col-md-10">
          @Html.EditorFor(m => m.EmployeedTo, new { type = "date" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LeaveReason, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LeaveReason)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address.Addressline1, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address.Addressline1)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address.Addressline2, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address.Addressline2)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address.ZIP, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address.ZIP)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address.Place, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address.Place)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address.CountryCode, new { @class = "col-md-2 " })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address.CountryCode, new {  @maxlength = "3" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="UpdateProfile" />
        </div>
    </div>
}
